# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15

[timetracker]
command=t now
color=#AAAAFF
interval=5

# [volume]
# label=♪
# instance=Master
# command=/usr/share/i3blocks/volume
# interval=once
# signal=10

[wireless]
label=W
instance=wlan0
command=/usr/share/i3blocks/network
interval=10

[ethernet]
label=E
instance=eth0
command=/usr/share/i3blocks/network
interval=10

[cpu]
label=
command=/usr/share/i3blocks/cpu_usage
interval=10
min_width=99.99%
#separator=false

[battery]
label=⚡
command=/usr/share/i3blocks/battery
interval=90

[date]
command=date '+%d/%m/%y'
interval=60

[time]
command=date '+%H:%M:%S'
interval=5
